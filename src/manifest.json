{
  "name": "Scheduler for UT",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Schedule your courses on UT.",

  "permissions": [
    "https://utdirect.utexas.edu/",
    "https://login.utexas.edu/"
  ],

  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },

  "content_security_policy": "script-src 'self'; object-src 'self'"
}